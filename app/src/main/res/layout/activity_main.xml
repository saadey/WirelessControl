<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F18181"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Wireless Control"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baseline_laptop_24" />

                <TextView
                    android:id="@+id/deviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="18dp"
                    android:drawableLeft="@drawable/baseline_cell_tower_24_offline"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="HP Elitebook 745 G3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cmdInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1B41A4F4"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Ctr+a"
                    android:inputType="textPersonName"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Submit" />

                    <Button
                        android:id="@+id/write"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Write" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/esc"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Esc"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/volUp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text=" 🔊 "
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/trackLeft"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="⏮"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/disconnect"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:backgroundTint="#C4EF0B0B"
                                android:gravity="center"
                                android:text="OFF"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </TableRow>



                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/fn"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Fn"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/volDown"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text=" 🔉 "
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/trackRight"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="⏭"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/exit"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:backgroundTint="#C4EF0B0B"
                                android:gravity="center"
                                android:text="Close"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tab"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Tab ↹"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/capslock"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Caps"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/mute"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Mute 🔇"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/f5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:backgroundTint="#C4409F05"
                                android:gravity="center"
                                android:text="F5 ⟳"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/windows"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="❖"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/menu"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="☰"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/shift"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Shift"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/backspace"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Back ←"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/ctrl"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Ctrl"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/alt"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Alt"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/arrow_up"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="↑"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/enter"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="Enter ↵"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/space"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="⎵"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/arrow_left"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="←"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/arrow_down"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="↓"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/arrow_right"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#2195F2"
                                android:gravity="center"
                                android:text="→"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </TableRow>

                    </TableLayout>
                </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>